<script type="text/javascript">
    //获取验证码
    function SignIn() {
        this.mode='message';
        this.init();
    }
    SignIn.prototype={
        constructor: SignIn,
        init: function () {
            this.tabsSwitch();
            this.doSubmit();
            this.teleInput();
        },
        //切换登录方式
        tabsSwitch: function () {
            var _this=this;
            var tabs=$('.modes-tabs .tabs-item'),
                forms=$('.modes-forms .forms-item');
            tabs.each(function (index,element) {
                $(this).click(function () {
                    _this.mode=$(this).attr('mode');
                    $('.prompt').html('').css({
                        'visibility': 'hidden'
                    });
                    tabs.removeClass('active');
                    $(this).addClass('active');
                    forms.hide();
                    forms.eq(index).show();
                })   
            })
        },
        doSubmit: function () {
            var _this=this;
            $('#submit').click(function () {
                /*if ($('#username').val()=='') {
                    $('.prompt').html('请填写用户名').css({
                        'visibility': 'visible'
                    });
                    return;
                }
                if ($('#password').val()=='') {
                    $('.prompt').html('请填写密码').css({
                        'visibility': 'visible'
                    });
                    return;
                }*/
                if (_this.mode=='message') {
                    var tele=_this.prompt('#telephone','请填写手机号');
                    if (!tele) return;
                    var code=_this.prompt('#identifying-code','请填写验证码');
                    if (!code) return;
                    console.log('点击登录按钮');
                    _this.submitMessage();
                } else if(_this.mode=='password') {
                    var user=_this.prompt('#username','请填写用户名');
                    if (!user) return;
                    var pass=_this.prompt('#password','请填写密码');
                    if (!pass) return;
                    _this.submitPassword();
                }
            })
        },
        //检测手机号输入框
        teleInput: function () {
            var _this=this;
            $('#telephone').bind('input propertychange change',function () {
                // console.log(111);
                if (_this.testTele()) {
                    $('.get-code').removeAttr('disabled').css({
                        color: '#34495e'
                    });
                    _this.teleCode();
                } else{
                    $('.get-code').attr('disabled','disabled').css({
                        color: '#ccc'
                    });
                }
            });           
        },  
        //正则匹配手机号
        testTele: function () {
            var tele=document.getElementById('telephone').value;
            var myreg=/^[1][3,4,5,7,8][0-9]{9}$/;  
            if (!myreg.test(tele)) {  
                return false;  
            } else{  
                return true;  
            } 
        }, 
        //提示信息
        prompt: function (id,text) {
            var _this=this;
            if ($(id).val()=='') {
                /*$('.prompt').html(text).css({
                    'visibility': 'visible'
                });*/
                _this.promptDom(text,'visible');
                return false;
            }
            return true;
        }, 
        //DOM元素prompt设定
        promptDom: function (text,visible) {
            $('.prompt').html(text).css({
                'visibility': visible
            });
        },
        //获取手机验证码
        teleCode: function () {
            $('.get-code').click(function () {
                console.log('已经点击');
                $.post('/teleCode',{
                    'telephone': $('#telephone').val()
                },function (result) {
                    // console.log('结果是：'+result);
                    if (result!=='1') {
                        return; 
                    }
                    /*if (result=='1') {
                        window.location='/notePages';
                    } else if(result=='-1'){
                        $('.prompt').html('用户名不存在！').css({
                            'visibility': 'visible'
                        });
                    } else if(result=='-2'){
                        $('.prompt').html('密码错误！').css({
                            'visibility': 'visible'
                        });
                    }*/
                })
            })
        },
        //短信登录
        submitMessage: function () {
            var _this=this;
            $.post('/login',{
                'mode': 'message',
                'telephone': $('#telephone').val(),
                'message': $('#identifying-code').val()
            },function (result) {
                console.log('页面结果'+result);
                if (result=='1') {
                    window.location='/notePages';
                } else if(result=='-1'){
                    /*$('.prompt').html('用户名不存在！').css({
                        'visibility': 'visible'
                    });*/
                    _this.promptDom('手机号未注册','visible');
                } else if(result=='-2'){
                    /*$('.prompt').html('密码错误！').css({
                        'visibility': 'visible'
                    });*/
                    _this.promptDom('验证码不正确','visible');
                }
            })
        },
        //密码登录
        submitPassword: function () {
            $.post('/login',{
                'mode': 'password',
                'username': $('#username').val(),
                'password': $('#password').val()
            },function (result) {
                if (result=='1') {
                    window.location='/notePages';
                } else if(result=='-1'){
                    $('.prompt').html('用户名不存在！').css({
                        'visibility': 'visible'
                    });
                } else if(result=='-2'){
                    $('.prompt').html('密码错误！').css({
                        'visibility': 'visible'
                    });
                }
            })
        }   
    }
