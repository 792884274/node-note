<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" name="viewport" />
    <title>node-note</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="/css/reset.less" rel="stylesheet/less"/>
    <link href="/css/main.less" rel="stylesheet/less"/>
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
    <script src="/js/less.js" type="text/javascript" charset="utf-8"></script>
    <script src="/js/jquery-1.11.3.min.js"></script>
</head>
<body>

<div class="container note-info note-user note-password">
    <header class="clearfix header">
        <a href="javascript:history.back(-1)" class="f_l">
            <i class="fa fa-chevron-left fa-lg"></i>
        </a>
        <span class="header-text">密码修改</span>
    </header>
    <div class="content">
        <input type="password" class="form-control" id="change-password" placeholder="密码">
        <div class="prompt" role="alert">错误</div>
        <button type="button" class="btn btn-customized" id="submit">确定</button>
    </div>
</div>

<script type="text/javascript">
    
    function ChangePassword() {
        this.init();
    }
    ChangePassword.prototype={
        constructor: ChangePassword,
        init: function () {
            this.submit();
        },
        submit: function () {
            var _this=this;
            $('#submit').click(function () {
                var user=_this.prompt('#change-password','密码不能为空');
                if (!user) return;
                _this.toAjax();
            })
        },
        //提示信息
        prompt: function (id,text) {
            var _this=this;
            if ($(id).val()=='') {
                _this.promptDom(text);
                return false;
            }
            return true;
        }, 
        //DOM元素prompt设定
        promptDom: function (text,visible) {
            if (!visible){
                var visible='visible';
            } 
            $('.prompt').html(text).css({
                'visibility': visible
            });
        }, 
        //ajax提交后天
        toAjax: function () {
            var _this=this;
            var val=$('#change-password').val();
            if (val=='') {
                return;  
            }
            $.post('/noteChangePassword',{
                'password': val
            },function (result) {
                if (result=='1') {
                    window.location='/noteUser';                  
                } else if(result=='2'){
                    _this.promptDom('新密码和老密码相同');
                } else{
                    return;
                }
            })
        }
                 
    }
    new ChangePassword();
</script>
</body>
</html>